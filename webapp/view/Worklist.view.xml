<mvc:View
    controllerName="zetpmhoursworked.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:titleCustomTextActions> 
            <Button id="_IDGen1" icon="sap-icon://kpi-corporate-performance" 
                                 tooltip="Mostrar Reportes" 
                                 text='{i18n>buttonDisplay}' type="Accept" 
                                 press="onDisplay" visible="true" />                 
        </semantic:titleCustomTextActions>  

        <semantic:content>
           <IconTabBar
				id="iconTabBar"
				headerBackgroundDesign="Transparent"
				class="sapUiResponsiveContentPadding"
				binding="{ReportModel}"
				select=""
				selectedKey="">				
                <items>
                    <IconTabFilter id="OrderTab" text="Orden PM" key="key1">
						<mvc:XMLView id="OrdenView" viewName="zetpmhoursworked.view.Orden"></mvc:XMLView>
					</IconTabFilter>						

                    <IconTabFilter id="PuestoTab" text="Tiempo Promedio" key="key2">
						<mvc:XMLView id="PuestoView" viewName="zetpmhoursworked.view.Puesto"></mvc:XMLView>
					</IconTabFilter>						
                    						
                </items>                
			</IconTabBar>     
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

    </semantic:SemanticPage>

</mvc:View>