<mvc:View 
  id="PuestoView"  
  controllerName="zetpmhoursworked.controller.Worklist"  
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core" 
  xmlns:m="sap.m" 
  xmlns:l="sap.ui.layout" >  
  <f:SimpleForm		
		id="PuestoForm"
		columnsL="3"
		columnsM="3"
		editable="true"
		layout="ResponsiveGridLayout">		
		<f:content>	
             <Table
                id="tablePuesto"
                width="auto"
                items="{
                    path: 'ReportModel>/WorkcenterSet',
                    sorter: {
                        path: 'Workcenter',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                         
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="nameColumn1">
                        <Text text="{i18n>tableColumnWorkcenterTitle}" id="col1"/>
                    </Column>                      
                    <Column id="nameColumn2">
                        <Text text="{i18n>tableColumnTimeAgreededTitle}" id="col2" width="30%"/>
                    </Column>                                        
                    <Column id="nameColumn4">
                        <Text text="{i18n>tableColumnTimeAverageTitle}" id="col4" width="30%"/>
                    </Column>                    
                </columns>

                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItemWorkcenter"
                        type="Navigation"
                        press=".onPress">                                              
                        <Text id="_IDGenText1" text="{ReportModel>Workcenterdescr}"/>
                        <Text id="_IDGenText2" text="{ReportModel>Timeagreeded}"/>                        
                        <Text id="_IDGenText4" text="{ReportModel>Timeaverage}"/>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:SimpleForm>	
</mvc:View> 